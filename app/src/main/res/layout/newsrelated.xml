<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/relNewsDet"
        android:layout_width="279dp"
        android:layout_height="77dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relNewsImage"
        app:layout_constraintTop_toBottomOf="@+id/relNewsHead" />

    <TextView
        android:id="@+id/relNewsHead"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relNewsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/relNewsImage"
        android:layout_width="133dp"
        android:layout_height="124dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thumb" />

</androidx.constraintlayout.widget.ConstraintLayout>